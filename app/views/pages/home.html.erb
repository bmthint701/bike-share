<div class="banner">
  <div class="container">
    <div class="row">
      <h1>JP BikeShare</h1>
      <div>
        <%= form_tag(search_path, method: :get) do %>
        <span id ="banner-typed-text"> <%= text_field_tag :term, params[:term], class: "input", label: "Please enter a location", hint: "Please enter a location", placeholder: "e.g. Minato, Kichijoji" %> </span>
        <%= link_to search_path do %>
          <i class="fas fa-location-arrow" style="font-size:30px;color:white;"></i>
        <% end %>
        <%= submit_tag 'Search', name: nil %>
        <% end %>
      </div>
      <div><h3><i>Move Faster with JP BikeShare</i></h3></div>
    </div>
  </div>
</div>
